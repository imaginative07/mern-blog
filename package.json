  "dependencies": {
    "colors": "^1.4.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "mongoose": "^7.3.1",
    "parser": "^0.1.4",
    "winston": "^3.9.0"
  },
  "devDependencies": {
